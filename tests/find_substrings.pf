module find_substrings
!
   use funit
   use string_utilities, only: find_longest_substring_from_start
   use string_utilities, only: find_longest_substring_from_end
!
contains
!
   @test
   subroutine search_from_start_find_at_start()
!
      character(len=4) :: string_a
      character(len=4) :: string_b
!
      integer :: index, length
      logical :: found
!
      string_a = "ckai"
      string_b = "ckbj"
!
      call find_longest_substring_from_start(string_a, string_b, &
                                             index, length, found)
!
      @assertEqual(2, length)
      @assertEqual(1, index)
!
   end subroutine search_from_start_find_at_start
!
!
   @test
   subroutine search_from_start_find_at_end()
!
      character(len=4) :: string_a
      character(len=4) :: string_b
!
      integer :: index, length
      logical :: found
!
      string_a = "ckai"
      string_b = "bjck"
!
      call find_longest_substring_from_start(string_a, string_b, &
                                             index, length, found)
!
      @assertEqual(2, length)
      @assertEqual(3, index)
!
   end subroutine search_from_start_find_at_end
!
!
   @test
   subroutine search_from_start_find_nothing()
!
      character(len=4) :: string_a
      character(len=4) :: string_b
!
      integer :: index, length
      logical :: found
!
      string_a = "aick"
      string_b = "bjck"
!
      call find_longest_substring_from_start(string_a, string_b, &
                                             index, length, found)
!
      @assertEqual(0, index)
      @assertEqual(0, length)
!
   end subroutine search_from_start_find_nothing
!
!
!
!
!
   @test
   subroutine search_from_end_find_at_start()
!
      character(len=4) :: string_a
      character(len=4) :: string_b
!
      integer :: index, length
      logical :: found
!
      string_a = "aick"
      string_b = "ckbj"
!
      call find_longest_substring_from_end(string_a, string_b, &
                                             index, length, found)
!
      @assertEqual(2, length)
      @assertEqual(1, index)
!
   end subroutine search_from_end_find_at_start
!
!
   @test
   subroutine search_from_end_find_at_end()
!
      character(len=4) :: string_a
      character(len=4) :: string_b
!
      integer :: index, length
      logical :: found
!
      string_a = "aick"
      string_b = "bjck"
!
      call find_longest_substring_from_end(string_a, string_b, &
                                             index, length, found)
!
      @assertEqual(2, length)
      @assertEqual(3, index)
!
   end subroutine search_from_end_find_at_end
!
!
   @test
   subroutine search_from_end_find_nothing()
!
      character(len=4) :: string_a
      character(len=4) :: string_b
!
      integer :: index, length
      logical :: found
!
      string_a = "ckai"
      string_b = "bjck"
!
      call find_longest_substring_from_end(string_a, string_b, &
                                             index, length, found)
!
      @assertEqual(0, index)
      @assertEqual(0, length)
!
   end subroutine search_from_end_find_nothing
!
end module find_substrings
